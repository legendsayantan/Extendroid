<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:padding="25dp"
    android:background="?attr/colorOnBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/startStopBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="?attr/colorOnSecondary"
        app:strokeWidth="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/actionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Start"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="7dp"
                android:layout_weight="1"
                android:text="@string/app_name"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/actionImage"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_play_arrow_24"
                app:tint="?attr/colorOnSecondary" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/startStopBtn">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/disableScreen"
            android:layout_weight="1"
            app:cardBackgroundColor="?attr/colorPrimary"
            app:strokeColor="?attr/colorOnSecondary"
            app:strokeWidth="2dp"
            android:layout_marginVertical="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:text="Disable Screen"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            app:cardBackgroundColor="?attr/colorPrimary"
            android:layout_marginStart="15dp"
            app:strokeColor="?attr/colorOnSecondary"
            app:strokeWidth="2dp"
            android:layout_marginVertical="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/controlSwitch"
                android:text="floating menu"
                android:textColor="?attr/colorOnSecondary"
                android:layout_marginHorizontal="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:textSize="16sp"
        android:text="Status:"
        app:layout_constraintTop_toBottomOf="@+id/btns"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="5dp"
        android:textSize="20sp"
        android:text="Sessions:"
        app:layout_constraintTop_toBottomOf="@+id/statusText"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sessions"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@+id/textView">

    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/addBtn"
        app:cardCornerRadius="30dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="25dp"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:strokeColor="?attr/colorOnSecondary"
        app:strokeWidth="2dp"
        android:contentDescription="@string/create_session"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:src="@drawable/baseline_add_24"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tint="?attr/colorOnSecondary" />
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>